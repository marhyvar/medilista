<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dosageViewModel"
            type="com.example.medilista.details.DetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".details.DosageFragment">


        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/edit_check_if_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={dosageViewModel.alarm}"
            android:text="@string/alarm_check"
            app:layout_constraintBottom_toTopOf="@+id/edit_check_if_taken_when_needed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/show_time_picker"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/show_timepicker"

            android:text="@string/show_timepicker"
            app:layout_constraintBottom_toTopOf="@+id/save_medicine_button"
            app:layout_constraintTop_toBottomOf="@+id/number_picker"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/save_medicine_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/save_medicine"
            android:onClick="@{() -> dosageViewModel.onSaveButtonClick()}"
            android:text="@string/save_medicine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_time_picker"
            tools:layout_editor_absoluteX="0dp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/edit_check_if_taken_when_needed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={dosageViewModel.onlyWhenNeeded}"
            android:text="@string/taken_when_needed"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_check_if_alarm" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_dosage_value"
            app:layout_constraintBottom_toTopOf="@+id/number_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_check_if_taken_when_needed" />

        <NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/edit_dosage_value"
            app:layout_constraintBottom_toTopOf="@+id/show_time_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>