<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="detailsViewModel"
            type="com.example.medilista.details.DetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".details.DetailsFragment">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_medicine_name"
            android:text="@={detailsViewModel.name}"
            app:layout_constraintBottom_toTopOf="@+id/edit_medicine_strength"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_medicine_strength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_medicine_strength"
            android:text="@={detailsViewModel.strength}"
            app:layout_constraintBottom_toTopOf="@+id/edit_medicine_form"
            app:layout_constraintTop_toBottomOf="@+id/edit_medicine_name"
            tools:layout_editor_absoluteX="-16dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_medicine_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_medicine_form"
            android:text="@={detailsViewModel.form}"

            app:layout_constraintBottom_toTopOf="@+id/next_button"
            app:layout_constraintTop_toBottomOf="@+id/edit_medicine_strength"
            tools:layout_editor_absoluteX="-29dp" />

        <Button
            android:id="@+id/next_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/next"
            android:onClick="@{() -> detailsViewModel.onNextButtonClicked()}"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="-16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>